<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item> // You can change thickness here.

    </style>

    <style name="PopupAnimation" parent="Widget.AppCompat.PopupWindow">
        <item name="android:windowEnterAnimation">@anim/buttom_up</item>
        <item name="android:windowExitAnimation">@anim/buttom_down</item>
    </style>

    <style name="iconGenText">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#ffffff</item>

    </style>

    <style name="TextAppearance_Default">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>

        <!--<item name="fontPath">@string/font_roboto_black</item>-->
        <!--<item name="fontPath">@string/font_roboto_bold</item>-->
        <!--<item name="fontPath">@string/font_roboto_light</item>-->
        <!--<item name="fontPath">@string/font_roboto_medium</item>-->
        <!--<item name="fontPath">@string/font_roboto_thin</item>-->
    </style>

    <style name="text_roboto_regular_18sp_white" parent="@style/TextAppearance_Default">

        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_roboto_bold_22sp_spacing2_white" parent="@style/TextAppearance_Default">

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_roboto_bold_25sp_spacing2_white" parent="@style/TextAppearance_Default">

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>
