<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for single list item in Contact List Activity -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/bg_game"
    android:orientation="vertical"
    android:divider="#00ff00"
    android:dividerPadding="22dip"
    android:showDividers="middle"
    android:layout_marginTop="10dp"
    android:id="@+id/item_event"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/event_list_photo"
        >
    </androidx.appcompat.widget.AppCompatImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/event_list_date"
            android:layout_width="235dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"

            android:focusable="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="9dp">

        </androidx.appcompat.widget.AppCompatAutoCompleteTextView>

        <Button
            android:id="@+id/event_favoris"
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_fav" />

        <Button
            android:id="@+id/event_check"
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_loc" />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/event_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="Name_Event"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold">

    </androidx.appcompat.widget.AppCompatAutoCompleteTextView>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/event_list_description"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:focusable="false"
            android:text="Description"
            android:textSize="10dp"
            android:textColor="@color/colorPrimaryDark">

        </androidx.appcompat.widget.AppCompatAutoCompleteTextView>


    </androidx.appcompat.widget.LinearLayoutCompat>




</LinearLayout>