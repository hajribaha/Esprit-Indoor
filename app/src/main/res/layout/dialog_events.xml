<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#7b7c78"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/dialog_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="02/02/2020"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginTop="90dp">
        </TextView>
        <TextView
            android:id="@+id/dialog_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Event name"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginTop="10dp">

        </TextView>
        <TextView
            android:id="@+id/dialog_event_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Event place"
            android:textColor="@color/white"
            android:textSize="18sp">
        </TextView>
        <TextView
            android:id="@+id/dialog_event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Event description"
            android:textColor="@color/white"
            android:textSize="18sp">
        </TextView>


    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:src="@drawable/colorado_mountains"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

    </ImageView>

</RelativeLayout>