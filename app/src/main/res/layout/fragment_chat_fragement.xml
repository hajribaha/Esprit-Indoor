<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:chatview="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="ViewModelMyFriend"
            type="com.example.espritindoor.MyFriendVM" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewModel.ChatFragement">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ViewModel.ColleagueFragement">

            <EditText
                android:id="@+id/searchF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_search" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/MyFriend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/grey" />


        </LinearLayout>


    </LinearLayout>
</layout>