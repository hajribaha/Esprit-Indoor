<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageAmi"
            android:layout_width="87dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/walid" />

        <TextView
            android:id="@+id/nomFriendf"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="le nom de mon ami"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <ImageButton
            android:id="@+id/btnChat"
            android:layout_width="60dp"
            android:layout_height="71dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle_border"
            app:srcCompat="@drawable/ic_message_black" />

        <ImageButton
            android:id="@+id/btnTrak"
            android:layout_width="60dp"
            android:layout_height="71dp"
            android:layout_marginHorizontal="@dimen/activity_vertical_margin"
            android:background="@drawable/rond"
            app:srcCompat="@drawable/ic_person_pin" />


    </LinearLayout>


</androidx.cardview.widget.CardView>