<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/date_time_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/followingBG">

        <EditText
            android:id="@+id/add_name_event"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="31dp"
            android:hint="Event_name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:drawableEnd="@drawable/ic_event_available_black_24dp">
        </EditText>

        <EditText
            android:id="@+id/add_description_event"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="70dp"
            android:hint="Event_description"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:drawableEnd="@drawable/ic_description_black_24dp">
        </EditText>

        <EditText
            android:id="@+id/add_date_event"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="31dp"
            android:hint="Event_date"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:drawableEnd="@drawable/ic_today_black_24dp">
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginRight="10dp"


            android:orientation="horizontal">

            <EditText
                android:id="@+id/add_time_event"
                android:layout_width="265dp"
                android:layout_height="31dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:background="@color/white"
                android:hint="Event_time"
                android:textAlignment="viewStart"
                android:textSize="20dp"
                android:textStyle="bold">

            </EditText>

            <Button
                android:id="@+id/add_btn_time_event"
                android:layout_width="47dp"
                android:layout_height="42dp"
                android:background="@drawable/btn_time">

            </Button>


        </LinearLayout>

        <EditText
            android:id="@+id/add_place_event"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="31dp"
            android:hint="Event_place"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:drawableEnd="@drawable/ic_location">
        </EditText>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="251dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/blac"
            android:orientation="vertical">

            <TextView
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:text="Poster Of The Event"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="italic"></TextView>

            <ImageButton
                android:id="@+id/add_btn_image_event"
                android:layout_width="311dp"
                android:layout_height="226dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:contextClickable="true"
                android:text="Image of the event"
                android:textAlignment="center">

            </ImageButton>
        </LinearLayout>



        <Button
            android:id="@+id/button_event_publish"
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:text="Publish"
            android:background="@color/accent">
        </Button>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>